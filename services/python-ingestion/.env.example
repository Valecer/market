# =============================================================================
# Python Ingestion Worker Configuration
# =============================================================================
# Copy this file to .env and update values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://marketbel_user:your_password@localhost:5432/marketbel

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# =============================================================================
# Queue Configuration
# =============================================================================
QUEUE_NAME=default
DLQ_NAME=dlq

# =============================================================================
# Worker Configuration
# =============================================================================
MAX_WORKERS=10
JOB_TIMEOUT=600
LOG_LEVEL=INFO

# =============================================================================
# Google Sheets Configuration (Optional)
# =============================================================================
# Path to Google service account credentials JSON file
GOOGLE_CREDENTIALS_PATH=/path/to/credentials.json

# =============================================================================
# Matching Pipeline Configuration (Phase 4)
# =============================================================================
# Auto-match threshold: Items with similarity >= this value are automatically linked
# Default: 95.0 (95% similarity required for auto-match)
MATCH_AUTO_THRESHOLD=95.0

# Potential match threshold: Items with similarity >= this value but < auto threshold
# are flagged for manual review
# Default: 70.0 (70-94% similarity triggers review)
MATCH_POTENTIAL_THRESHOLD=70.0

# Batch size for matching task: Number of unmatched items to process per task
# Default: 100, Range: 1-1000
MATCH_BATCH_SIZE=100

# Maximum candidates to return per item in review queue
# Default: 5
MATCH_MAX_CANDIDATES=5

# Review queue expiration: Days until pending reviews expire
# Default: 30 days
MATCH_REVIEW_EXPIRATION_DAYS=30

# =============================================================================
# Observability Configuration
# =============================================================================
# Enable Prometheus metrics endpoint (if implemented)
# METRICS_ENABLED=true
# METRICS_PORT=9090

# Structured logging format (json or console)
LOG_FORMAT=json
